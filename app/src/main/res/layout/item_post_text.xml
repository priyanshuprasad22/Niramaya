<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/post_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="22:20 P.M"
            android:layout_marginTop="80dp"
            android:layout_marginRight="5dp"/>


        <ImageView
            android:id="@+id/line"
            android:layout_width="4dp"
            android:layout_height="300dp"

            android:src="#00FF00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/post_text_img"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:layout_marginTop="80dp"


            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/my_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">






            <TextView
                android:id="@+id/post_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/txt_card_bg"


                android:text="Doctor_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/diagonisis_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="diagonosis"
                android:background="@drawable/txt_card_bg"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/date_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/txt_card_bg"
                android:text="date of visit"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/followup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_card_bg"
                android:text="followup"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/medi_text"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_card_bg"
                android:text="medications"
                android:textColor="@color/black"
                android:textStyle="bold"/>


        </LinearLayout>


    </LinearLayout>





</RelativeLayout>